<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
            <h3 class="text-xl font-semibold">My Products</h3>
        </div>
        <div class="flex flex-col mt-8">
            <a class="block w-fit mb-2 text-blue-500 font-medium" href="/owners/createproducts">+ Add New Product</a>
            <a class="block w-fit mb-2" href="/owners/myproducts">All My Products</a>
        </div>
        <div class="mt-8">
            <p class="text-sm text-gray-600">Total Products: <span class="font-semibold"><%= products.length %></span></p>
        </div>
    </div>
    <div class="w-[75%] flex flex-col gap-5 h-screen">
        <% if (products.length === 0) { %>
            <div class="flex flex-col items-center justify-center h-64 text-gray-500">
                <i class="ri-shopping-bag-line text-6xl mb-4"></i>
                <h3 class="text-xl mb-2">No products yet</h3>
                <p class="text-sm mb-4">Start by creating your first product</p>
                <a href="/owners/createproducts" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">
                    Create Product
                </a>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% products.forEach(function(product){ %>
                    <div class="w-60">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] rounded-t-lg">
                            <img class="h-[12rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                alt="<%= product.name %>">
                        </div>
                        <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>] rounded-b-lg">
                            <div>
                                <h3 class="font-semibold">
                                    <%= product.name %>
                                </h3>
                                <h4 class="text-lg font-bold">â‚¹ <%= product.price %>
                                </h4>
                                <% if (product.discount > 0) { %>
                                    <p class="text-sm">Discount: <%= product.discount %>%</p>
                                <% } %>
                            </div>
                            <div class="flex flex-col gap-2">
                                <button class="w-7 h-7 flex items-center justify-center rounded-full bg-white text-gray-600 hover:bg-gray-100 edit-product" data-product-id="<%= product._id %>">
                                    <i class="ri-edit-line text-sm"></i>
                                </button>
                                <button class="w-7 h-7 flex items-center justify-center rounded-full bg-red-100 text-red-600 hover:bg-red-200 delete-product" data-product-id="<%= product._id %>">
                                    <i class="ri-delete-bin-line text-sm"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle edit product buttons
    document.querySelectorAll('.edit-product').forEach(button => {
        button.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            // TODO: Implement edit functionality
            alert('Edit functionality coming soon! Product ID: ' + productId);
        });
    });

    // Handle delete product buttons
    document.querySelectorAll('.delete-product').forEach(button => {
        button.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            if (confirm('Are you sure you want to delete this product?')) {
                // TODO: Implement delete functionality
                alert('Delete functionality coming soon! Product ID: ' + productId);
            }
        });
    });
});
</script>

